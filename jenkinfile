pipeline {
    agent any

    environment {
        // Replace with your actual DockerHub username
        DOCKER_IMAGE = 'your-dockerhub-username/java-project-maven-new:latest'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build WAR with Maven') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push Docker Image (Optional)') {
            when {
                expression { return env.DOCKERHUB_USERNAME && env.DOCKERHUB_PASSWORD }
            }
            steps {
                script {
                    echo "Logging into Docker Hub"
                    sh "echo ${DOCKERHUB_PASSWORD} | docker login -u ${DOCKERHUB_USERNAME} --password-stdin"
                    sh "docker push ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Run Container (Optional)') {
            steps {
                script {
                    sh "docker run -d -p 8080:8080 ${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        failure {
            echo 'Build failed. Check errors above.'
        }
        success {
            echo 'Build and Docker steps completed successfully!'
        }
    }
}


